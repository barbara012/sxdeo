<!DOCTYPE html>
<html>
	<head>
		<% include head %>
		<link rel="stylesheet" href="/css/post.css"/>
	</head>
	<body>
		<div class="posted">
			<div class="navbar navbar-fixed-top" role="navigation">
				<div class="container clearfix">
					<a class="logo float-l" href="/">HwH</a>
					<ul class="nav navbar-nav float-l clearfix">
						<li>
							<a href="/" title="返回首页">首页</a>
						</li>
						<li>
							<a href="/post" title="发布文章">发布文章</a>
						</li>
						<li class="active">
							<a href="/posted/<%= user.name %>" title="个人文章中心">个人文章中心</a>
						</li>
					</ul>
					<ul class="nav navbar-nav float-r">
						<li>
							<a href="/u/<%= user.name %>" class="user_head" title="<%= user.name %>">
								<img src="<%= user.head %>" alt="<%= user.name %>">
							</a>
						</li>
						<li>
							<a href="/logout">退出</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="posted-list clearfix">
			<% if (arrayId !== 0) { %>
				<div class="list float-l">
					<div id="list" class="float-r wtf">
						<div class="list-head">
							<span>所有文章</span>
							<a href="/post" class="float-r"><span class="icon icon-plus"></span></a>
						</div>
						<% var active; %>
						<% arrayId.forEach(function(id, index){ %>
							<% if (index === 0) {active=' active'} else {active = ''} %>
						<div class="title-item<%= active %>">
							<div class="article-btn" href="javascript:;" data-name="<%= user.name %>" data-id="<%= id._id %>">
								<p class="p1"><%= id.title.replace('<span>','').replace('</span>', '') %></p>
								<p class="p2">发表于：<%= id.time.minute %></p>
							</div>
						</div>
						<% }) %>
					</div>
				</div>
				<div class="content float-l pos-rela">
					<div style="height: 100%;width: 100%;" class="wtf pos-rela">
						<div class="matte-head pos-abso"></div>
						<div class="content-head pos-abso clearfix">
							<div class="float-l">
								<div class="posted_comment">
									<a class="posted_comments" href="javascript:;">
									</a>
								</div>
							</div>
							<div class="float-r">
								<span class="icon icon-cog set">
									<div class="operation-group pop-tip">
										<a class="edit" href="/edit/<%= post._id %>">编辑</a>
										<a class="delete" href="javascript:;">删除</a>
										<input type="hidden" id="articleId" value="<%= post._id %>">
									</div>
								</span>
							</div>
						</div>
						<div id="content">
							<div class="article">
								<h1 class="txt-center"><%= post.title %></h1>
								<%- post.post %>
							</div>
						</div>
					</div>
				</div>
			</div>
		<% } else { %>
			<p class="txt-center">你还没发布过文章</p>
		<% } %>
		</div>
		<script src="/js/jquery-2.0.3.min.js"></script>
		<script src="/js/help.js"></script>
		<script src="/js/userAll.js"></script>
	</body>
</html>
